<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicator">@drawable/bg_tab_indicator</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/TextAppearance.ActionBar.TabText</item>
    </style>

    <style name="TextAppearance.ActionBar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.ActionBar.TabText" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>
